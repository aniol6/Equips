<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout


        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_weight="0.5"
            android:id="@+id/editnom"
            android:hint="Nom del jugador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="number"
            android:hint="Valoració"
            android:layout_weight="0.5"
            android:id="@+id/editvalor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>


    <LinearLayout
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_weight="0.5"
            android:background="@android:color/holo_blue_dark"
            android:id="@+id/blau"
            android:text="EQUIP BLAU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="0.5"
            android:background="@android:color/holo_red_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vermell"
            android:text="EQUIP VERMELL"/>

        </LinearLayout>
    <LinearLayout
        android:layout_weight="3"
        android:orientation="horizontal"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ListView
            android:layout_weight="0.5"
            android:id="@+id/equipblau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            </ListView>
        <ListView
            android:layout_weight="0.5"
            android:id="@+id/equipvermell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            </ListView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/njblau"
            android:text="Número de jugadors: "
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingLeft="10dp"
            android:id="@+id/njvermell"
            android:text="Número de jugadors: "
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        </LinearLayout>


    <Button
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:text="Random"
        android:id="@+id/random"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    



</LinearLayout>
<ListView
android:id="@+id/left_drawer"
android:layout_width="240dp"
android:layout_gravity="start"
android:choiceMode="singleChoice"
android:divider="@android:color/transparent"
android:dividerHeight="0dp"
android:background="#111"
android:layout_height="match_parent">

</ListView>

</android.support.v4.widget.DrawerLayout>